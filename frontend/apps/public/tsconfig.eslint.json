{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "types": [
      "vitest/globals",
      "vite/client",
      "@testing-library/jest-dom/vitest"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "vite.config.ts",
    "tailwind.config.ts",
    "../../packages/shared/src/**/*.ts",
    "../../packages/shared/src/**/*.tsx",
    "../../packages/shared/src/**/*.d.ts"
  ],
  "exclude": []
}
