{
  "name": "@personal-website/frontend",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @personal-website/public dev",
    "dev:admin": "pnpm --filter @personal-website/admin dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:perf": "cross-env VITE_USE_MOCK_PUBLIC_API=true VITE_DISABLE_HEALTH_CHECKS=true pnpm --filter @personal-website/public build -- --mode lhci && cross-env VITE_USE_MOCK_PUBLIC_API=true VITE_DISABLE_HEALTH_CHECKS=true node ./scripts/run-lhci.mjs",
    "format": "pnpm -r format",
    "prepare": "pnpm exec husky install"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.49.1",
    "cross-env": "^10.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "typescript": "5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "pnpm lint --filter ...[origin/main]",
    "*.{ts,tsx,js,jsx,json,css,md}": "pnpm format --filter ...[origin/main]"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "esbuild",
      "msw"
    ]
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=20"
  }
}
