server {
    listen ${PORT};
    listen [::]:${PORT};
    server_name _;

    root /usr/share/nginx/html;
    index index.html;
    charset utf-8;
    charset_types
        text/html
        text/plain
        text/css
        application/javascript
        application/json
        application/xml
        text/xml
        image/svg+xml;

    location / {
        try_files $uri /index.html;
    }

    location /admin/ {
        alias /usr/share/nginx/html/admin/;
        try_files $uri /admin/index.html;
    }
}
