{
  "ci": {
    "collect": {
      "url": [
        "http://127.0.0.1:4173/",
        "http://127.0.0.1:4173/projects",
        "http://127.0.0.1:4173/contact"
      ],
      "startServerCommand": "node ./scripts/start-preview.mjs",
      "startServerReadyPattern": "Local",
      "startServerReadyTimeout": 120000,
      "numberOfRuns": 1,
      "settings": {
        "chromeFlags": [
          "--headless=new",
          "--no-sandbox",
          "--disable-gpu",
          "--disable-dev-shm-usage",
          "--remote-debugging-pipe"
        ]
      }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": [
          "error",
          {
            "minScore": 0.9
          }
        ],
        "unused-javascript": [
          "warn",
          {
            "maxLength": 1
          }
        ],
        "uses-text-compression": [
          "warn",
          {
            "maxLength": 1
          }
        ],
        "render-blocking-resources": [
          "warn",
          {
            "maxLength": 1
          }
        ],
        "render-blocking-insight": [
          "warn",
          {
            "maxLength": 1
          }
        ],
        "network-dependency-tree-insight": [
          "warn",
          {
            "minScore": 0
          }
        ],
        "color-contrast": [
          "warn",
          {
            "minScore": 0
          }
        ],
        "errors-in-console": [
          "warn",
          {
            "minScore": 0
          }
        ],
        "max-potential-fid": [
          "warn",
          {
            "minScore": 0
          }
        ]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": ".lighthouseci/reports"
    }
  }
}
