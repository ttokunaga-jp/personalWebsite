{
  "name": "@personal-website/frontend",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @personal-website/public dev",
    "dev:admin": "pnpm --filter @personal-website/admin dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:perf": "pnpm --filter @personal-website/public build && node ./scripts/run-lhci.mjs",
    "format": "pnpm -r format",
    "prepare": "pnpm exec husky install"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@lhci/cli": "^0.15.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "typescript": "5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "pnpm lint --filter ...[origin/main]",
    "*.{ts,tsx,js,jsx,json,css,md}": "pnpm format --filter ...[origin/main]"
  },
  "packageManager": "pnpm@8.15.4"
}
